
clear
echo "***********************Setting up ssh key******************"

read -p "Enter your github registered email: " email
ssh-keygen -t ed25519 -C "$email" < <(echo "")
eval "$(ssh-agent -s)" > /dev/null
ssh-add ~/.ssh/id_ed25519
tail ~/.ssh/id_ed25519.pub | clip
echo "ssh key is copied to clipboard add the ssh key to your git account: (https://github.com/settings/keys)"
